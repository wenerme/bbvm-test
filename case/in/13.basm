; 13 | 将给定字符串中指定索引的字符替换为给定的ASCII代表的字符
; 返回: r3的值
; 参数: r1:ASCII码<br>r2:字符位置<br>r3:目标字符串
; 备注: r3所代表字符串的内容被修改, 要求r3是句柄才能修改r3的值,给出的ASCII会进行模256的处理


; 顺便测试下15号端口
in r0, 15
out 0, r0;>skip

ld int r2, STR_F
in r3, 2
; 拷贝 r2 到 r3
in r0, 5
out 1, r0;>123.019997
out 1, r3;>123.019997

; 修改第一个字符为 2
ld int r2, 0
ld int r1, 50; 2 的 ASCII
in r0, 13

out 1, r3;>223.019997
out 0, r1;>50

; 修改第二个字符为 1
ld int r2, 1
ld int r1, 49; 1 的 ASCII
in r0, 13

out 1, r3;>213.019997
out 0, r1;>49

; 异常处理
ld int r2, 0
ld int r1, 356; 356 % 256 = 100
in r0, 13
out 1, r3;>d13.019997
out 0, r1;>356

ld int r2, 0
ld int r1, 818; 818 % 256 = 50
in r0, 13
out 1, r3;>213.019997
out 0, r1;>818

; 顺便测试下14号端口
in r0, 14
out 0, r0;>65535

; 顺便测试下15号端口
in r0, 15
out 0, r0;>skip

exit
; 选择了一个能够正确转换为浮点数的数值
data STR_F char "123.019997",0
data STR_CN char "小文",0